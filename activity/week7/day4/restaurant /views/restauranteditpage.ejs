<%- include('./partials/header'); -%>

<div class="container">
    <form action='/restaurants/<%=data.id%>?_method=PUT' method="POST" >
        <div class="form-group">
            <label for="restaurant-name" class="col-form-label">name:</label>
            <input type="text" name="name" class="form-control" id="restaurant-name" value="<%=data.restaurantName%>">
        </div>
        <div class="form-group">
            <label for="restaurant-description" class="col-form-label">description:</label>
            <textarea name="description" class="form-control" id="restaurant-description" value="<%=data.desc%>"></textarea>
          </div>
          <div class="form-group">
            <label for="restaurant-phoneNumber" class="col-form-label">phoneNumber:</label>
          <input type="number" name="phoneNumber" class="form-control" id="restaurant-phoneNumber" value="<%=data.phoneNumber%>">
        </div>
      
        <div class="form-group">
            <label for="restaurant-image" class="col-form-label">image:</label>
          <input type="text" name="image" class="form-control" id="restaurant-image" value="<%=data.image%>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>

<%- include('./partials/footer'); -%>